- if controller_name != 'sessions'
  %p.general-sign-text.text-center
    = t('users.have_account')
    = link_to t('application.log_in'), new_session_path(resource_name), class: 'in-gold-500'

- if devise_mapping.registerable? && controller_name != 'registrations'
  %p.general-sign-text.text-center
    = t('users.no_account')
    = link_to t('application.sign_up'), new_registration_path(resource_name), class: 'in-gold-500'

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %p.text-center
    = link_to t('users.no_confirmation'), new_confirmation_path(resource_name), class: 'in-gold-500'

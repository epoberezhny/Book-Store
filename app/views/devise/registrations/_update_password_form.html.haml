= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
  .form-group.mb-30
    = f.label :current_password, 'Old Password', class: 'control-label input-label'
    = f.password_field :current_password, autocomplete: 'off', placeholder: 'Enter your email', class: 'form-control'
  .form-group.mb-30
    = f.label :password, 'New Password', class: 'control-label input-label'
    = f.password_field :password, autocomplete: 'off', placeholder: 'Enter your email', class: 'form-control'
  .form-group.mb-40
    = f.label :password_confirmation, 'Confirm Password', class: 'control-label input-label'
    = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Enter your email', class: 'form-control'
  .general-text-align
    = f.submit t('settings.save'), class: 'btn btn-default mb-10'
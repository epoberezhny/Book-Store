%main.container
  %h1.general-title-margin= t('settings.settings')
  -# = devise_error_messages!
  %ul.nav.clearfix.mb-20{ role: 'tablist' }
    %li.tab-item.active{ role: 'presentation' }
      %a.tab-link{ href: '#address', 'aria-controls' => 'address', role: 'tab', 'data-toggle' => 'tab' }= t('settings.address')
    %li.tab-item{ role: 'presentation' }
      %a.tab-link{ href: '#privacy', 'aria-controls' => 'privacy', role: 'tab', 'data-toggle' => 'tab' }= t('settings.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{ role: 'tabpanel' }
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t('billing_address')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t('shipping_address')
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('billing_address')
          = render 'address_form', type: 'billing'
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('shipping_address')
          = render 'address_form', type: 'shipping'
    #privacy.tab-pane.fade{ role: 'tabpanel' }
      .row.mb-60
        - if resource.provider.blank?
          .col-sm-5
            %p.in-gold-500.font-18.mb-25= t('settings.email')
            = render 'update_email_form'
          .col-sm-5.col-sm-offset-1
            %p.in-gold-500.font-18.mb-25= t('settings.password')
            = render 'update_password_form'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= t('settings.remove')
          = render 'remove_form'
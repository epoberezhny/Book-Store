= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
  = f.simple_fields_for "#{type}_address".to_sym, resource.send("#{type}_address") || resource.send("build_#{type}_address") do |a_form|
    = render 'shared/address_fields', form: a_form

    .text-center.general-text-align
      = f.submit t('settings.save'), class: 'btn btn-default'
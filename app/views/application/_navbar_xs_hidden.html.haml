.hidden-xs
  %ul.nav.navbar-nav
    %li
      = link_to 'en', url_for(locale: :en), class: 'language-link'
      = '/'
      = link_to 'ru', url_for(locale: :ru), class: 'language-link'
    %li
      = link_to t('application.home'), root_path
    = render partial: 'shop_options', layout: 'application/dropdown'

    - if user_signed_in?
      = render partial: 'account_options', layout: 'application/dropdown'
    - else
      = content_for :auth_links
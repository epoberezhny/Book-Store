.text-center.mb-40
  %h3.general-subtitle= t('checkout.thank_you')
  %p.fw-300= t('checkout.send_confirmation', email: current_user.email)
.row.mb-20
  .col-sm-6
    .visible-xs
      %p.general-order-number.mb-0= t('checkout.order', number: @order.number)
      %p.general-address.mb-30= @order.formatted_completed_at
    = render 'shared/address', address: @order.shipping_address

  .col-sm-6.hidden-xs.text-right
    %p.general-order-number.mb-0= t('checkout.order', number: @order.number)
    %p.general-address.mb-30= @order.formatted_completed_at

= render 'shared/items'
            
= render 'shared/summary', class: 'text-center general-text-right',
                           table_class: 'general-summary-table-right general-text-right',
                           order: @order
                    
.text-center
  = link_to t('checkout.back_to_store'), books_path, class: 'btn btn-default mb-20'